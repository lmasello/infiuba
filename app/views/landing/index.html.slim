          .icon-top.red-text
            i.icon-design-graphic-tablet-streamline-tablet

section#events.events
  .container
    .section-header
      h2.dark-text Events
      p.shortDescription
        | See below the list of forthcoming events.
    section#news.white-bg
      .timeline
        .date-title
          span  {month.monthAndYear}
        .row
          div data-ng-repeat=("event in month.events")
            div data-ng-class-even=("{'col-sm-6 news-item right':'even'}") data-ng-class-odd=("{'col-sm-6 news-item':'odd'}")
              .news-content
                .date
                  p  {event.day}
                  small  {event.dayName}
                h3.news-title  {event.title}
                .news-media
                  a.colorbox.cboxElement data-ng-href="{{event.link}}" target="_blank"
                    img.img-responsive alt="" data-ng-src="{{event.imageUrl}}" src="" /
                p  {event.description}
                a.read-more data-ng-href="{{event.link}}" target="_blank"  Read More

